---
import Layout from '../layouts/Layout.astro';
import Navbar from '../components/Navbar.astro';
import Footer from '../components/Footer.astro';
---
<Layout title="Report A Bug - GrupChat">
  <Navbar />
  <section class="max-w-2xl mx-auto py-16 px-4 sm:px-6 lg:px-8">
    <h1 class="text-3xl font-bold text-primary-main mb-8">Report A Bug</h1>
    <p class="mb-6 text-gray-700">Help us improve GrupChat by reporting any bugs or issues you encounter.</p>
    
    <!-- Google Form Embed -->
    <div class="bg-white rounded-xl shadow p-6">
      <iframe 
        src="YOUR_GOOGLE_FORM_EMBED_URL" 
        width="100%" 
        height="800" 
        frameborder="0" 
        marginheight="0" 
        marginwidth="0"
        class="rounded-lg"
      >
        Loadingâ€¦
      </iframe>
    </div>

    <div class="mt-6 bg-primary-main/10 border-l-4 border-primary-main p-4 rounded">
      <p class="text-primary-main font-medium">If you're having trouble with the form, you can send your bug report directly to <a href="mailto:grupchatinfo@gmail.com" class="underline">grupchatinfo@gmail.com</a>.</p>
    </div>
    <p class="mt-8 text-gray-500 text-sm">Your feedback helps us make GrupChat better. Thank you!</p>
  </section>
  <Footer />
</Layout> 