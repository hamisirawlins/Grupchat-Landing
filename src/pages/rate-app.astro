---
import Layout from '../layouts/Layout.astro';
import Navbar from '../components/Navbar.astro';
import Footer from '../components/Footer.astro';
import ResponsiveIframe from '../components/ResponsiveIframe.astro';
---
<Layout title="Rate The App - GrupChat">
  <Navbar />
  <section class="max-w-2xl mx-auto py-16 px-4 sm:px-6 lg:px-8">
    <h1 class="text-3xl font-bold text-primary-main mb-8">Rate The App</h1>
    <p class="mb-6 text-gray-700">We value your feedback! Please rate GrupChat and let us know how we can improve.</p>
    
    <!-- Google Form Embed -->
    <div class="bg-white rounded-xl shadow p-6">
      <ResponsiveIframe 
        src="https://docs.google.com/forms/d/e/1FAIpQLSfY95JXyp1sCJY4y5zs97bajYYxbDoRHsDC7GHMnIIEwslzMQ/viewform?embedded=true"
        title="Rating Form"
      />
    </div>

    <div class="mt-6 bg-primary-main/10 border-l-4 border-primary-main p-4 rounded">
      <p class="text-primary-main font-medium">If you're having trouble with the form, you can send your rating and feedback directly to <a href="mailto:grupchatinfo@gmail.com" class="underline">grupchatinfo@gmail.com</a>.</p>
    </div>
    <p class="mt-8 text-gray-500 text-sm">Thank you for helping us make GrupChat better!</p>
  </section>
  <Footer />
</Layout> 