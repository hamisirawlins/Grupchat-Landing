---
import ContactIconBlock from "@/components/ui/blocks/ContactIconBlock.astro";
import Icon from "@/components/ui/icons/Icon.astro";
---

<!-- Include EmailJS via CDN -->
<script
  type="text/javascript"
  src="https://cdn.jsdelivr.net/npm/@emailjs/browser@4/dist/email.min.js"
></script>

<!-- Initialize EmailJS -->
<script type="text/javascript">
  emailjs.init({
    publicKey: "6-bvinTXBJVjJ98Rb",
  });
</script>

<!-- Contact Us Section -->
<section class="mx-auto max-w-[85rem] px-4 py-10 sm:px-6 lg:px-8 lg:py-14">
  <div class="mx-auto max-w-2xl lg:max-w-5xl">
    <div class="text-center">
      <h1
        class="text-balance text-2xl font-bold tracking-tight text-neutral-800 dark:text-neutral-200 md:text-4xl md:leading-tight"
      >
        Contact us
      </h1>
      <p class="mt-1 text-pretty text-neutral-600 dark:text-neutral-400">
        Have questions or want to discuss a project? Reach out, and let's craft
        the perfect solution with our tools and services.
      </p>
    </div>

    <div class="mt-12 grid items-center gap-6 lg:grid-cols-2 lg:gap-16">
      <div class="flex flex-col rounded-xl p-4 sm:p-6 lg:p-8">
        <h2
          class="mb-8 text-xl font-bold text-neutral-700 dark:text-neutral-300"
        >
          Fill in the form below
        </h2>

        <!-- Form for user input with various input fields. -->
        <form id="contact-form" onsubmit="handleSubmit(event)">
          <div class="grid gap-4">
            <div class="grid grid-cols-1 gap-4 sm:grid-cols-2">
              <input
                id="hs-firstname-contacts"
                name="firstName"
                type="text"
                placeholder="First Name"
                required
                class="form-input"
              />
              <input
                id="hs-lastname-contacts"
                name="lastName"
                type="text"
                placeholder="Last Name"
                required
                class="form-input"
              />
            </div>
            <input
              id="hs-email-contacts"
              name="email"
              type="email"
              placeholder="Email Address"
              required
              class="form-input"
            />
            <textarea
              id="hs-about-contacts"
              name="details"
              placeholder="Details"
              required
              class="form-input"></textarea>
          </div>

          <div class="mt-4 grid">
            <button
              type="submit"
              class="btn-primary inline-flex w-full items-center justify-center gap-x-2 rounded-lg px-4 py-3 text-sm font-bold text-neutral-700 outline-none transition duration-300 focus-visible:ring"
              >Send Message</button
            >
          </div>

          <div class="mt-3 text-center">
            <p class="text-sm text-neutral-600 dark:text-neutral-400">
              We'll get back to you in less than a day.
            </p>
          </div>
        </form>
      </div>

      <div class="divide-y divide-neutral-300 dark:divide-neutral-700">
        <ContactIconBlock
          heading="FAQ"
          content="Explore our FAQ for quick, clear answers to common queries."
          isLinkVisible={true}
          linkTitle="Visit FAQ"
          linkURL="#"
          isArrowVisible={true}
          ><Icon name="chatBubble" />
        </ContactIconBlock>

        <ContactIconBlock
          heading="Contact us by email"
          content="Prefer the written word? Drop us an email at"
          isLinkVisible={true}
          linkTitle="grupchatinfo@gmail.com"
          linkURL="#"
          ><Icon name="envelopeOpen" />
        </ContactIconBlock>
      </div>
    </div>
  </div>
</section>

<!-- JavaScript to handle form submission and sending email using EmailJS -->
<script type="text/javascript">
  async function handleSubmit(event) {
    event.preventDefault();

    // Collect form data
    const formData = {
      firstName: document.getElementById("hs-firstname-contacts").value,
      lastName: document.getElementById("hs-lastname-contacts").value,
      email: document.getElementById("hs-email-contacts").value,
      details: document.getElementById("hs-about-contacts").value,
    };

    const templateParams = {
      firstName: formData.firstName,
      lastName: formData.lastName,
      email: formData.email,
      details: formData.details,
    };

    // Send the email using EmailJS
    emailjs.send("service_ycfat4d", "template_r2amu03", templateParams).then(
      function (response) {
        alert("Message sent successfully!");
        form.reset();
      },
      function (error) {
        alert("Failed to send message.");
        console.log("FAILED...", error);
      },
    );
  }
</script>
