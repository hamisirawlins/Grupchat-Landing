---
import { Image } from 'astro:assets';
import chatIcon from '../assets/icons/chat.svg';
import contactsIcon from '../assets/icons/contacts.svg';
import analyticsIcon from '../assets/icons/analytics.svg';
---

<section id="features" class="py-24 bg-gray-900 relative overflow-hidden">
  <!-- Background elements -->
  <div class="absolute inset-0">
    <div class="absolute top-0 left-1/4 w-72 h-72 bg-purple-500/10 rounded-full blur-3xl"></div>
    <div class="absolute bottom-0 right-1/4 w-72 h-72 bg-blue-500/10 rounded-full blur-3xl"></div>
  </div>

  <div class="relative mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
    <!-- Section Header -->
    <div class="text-center max-w-3xl mx-auto mb-16 animate-fade-in-up">
      <h2 class="text-3xl font-display font-bold tracking-tight text-white sm:text-4xl lg:text-5xl">
        Simple, Secure, and <span class="bg-gradient-to-r from-purple-400 to-blue-400 bg-clip-text text-transparent">Transparent</span>
      </h2>
      <p class="mt-4 text-lg text-gray-300">
        Everything you need to manage group funds with M-Pesa, all in one place
      </p>
    </div>

    <!-- Features Grid -->
    <div class="grid grid-cols-1 gap-8 md:grid-cols-2 lg:grid-cols-3">
      <!-- Feature 1: Easy Pool Creation -->
      <div class="relative bg-gray-800/50 backdrop-blur-sm rounded-2xl p-8 border border-gray-700/50 hover:border-purple-500/50 transition-all duration-300 group hover:transform hover:scale-105 animate-fade-in-up">
        <div class="absolute -top-4 left-8">
          <div class="bg-gradient-to-r from-purple-600 to-blue-600 rounded-xl p-3 shadow-lg group-hover:shadow-purple-500/25 transition-all duration-300">
            <Image src={chatIcon} alt="Create Pool" class="w-6 h-6 text-white" />
          </div>
        </div>
        <div class="mt-4">
          <h3 class="text-xl font-semibold text-white group-hover:text-purple-300 transition-colors duration-300">Create Pools Instantly</h3>
          <p class="mt-2 text-gray-300 group-hover:text-gray-200 transition-colors duration-300">
            Set up a new pool in seconds. Define your goal, set the target amount, and invite your group members.
          </p>
        </div>
      </div>

      <!-- Feature 2: M-Pesa Integration -->
      <div class="relative bg-gray-800/50 backdrop-blur-sm rounded-2xl p-8 border border-gray-700/50 hover:border-blue-500/50 transition-all duration-300 group hover:transform hover:scale-105 animate-fade-in-up" style="animation-delay: 0.1s;">
        <div class="absolute -top-4 left-8">
          <div class="bg-gradient-to-r from-blue-600 to-purple-600 rounded-xl p-3 shadow-lg group-hover:shadow-blue-500/25 transition-all duration-300">
            <Image src={contactsIcon} alt="M-Pesa Integration" class="w-6 h-6 text-white" />
          </div>
        </div>
        <div class="mt-4">
          <h3 class="text-xl font-semibold text-white group-hover:text-blue-300 transition-colors duration-300">Seamless M-Pesa Integration</h3>
          <p class="mt-2 text-gray-300 group-hover:text-gray-200 transition-colors duration-300">
            Direct M-Pesa integration for instant deposits and withdrawals. No need to switch apps.
          </p>
        </div>
      </div>

      <!-- Feature 3: Real-time Tracking -->
      <div class="relative bg-gray-800/50 backdrop-blur-sm rounded-2xl p-8 border border-gray-700/50 hover:border-purple-500/50 transition-all duration-300 group hover:transform hover:scale-105 animate-fade-in-up" style="animation-delay: 0.2s;">
        <div class="absolute -top-4 left-8">
          <div class="bg-gradient-to-r from-purple-600 to-blue-600 rounded-xl p-3 shadow-lg group-hover:shadow-purple-500/25 transition-all duration-300">
            <Image src={analyticsIcon} alt="Track Progress" class="w-6 h-6 text-white" />
          </div>
        </div>
        <div class="mt-4">
          <h3 class="text-xl font-semibold text-white group-hover:text-purple-300 transition-colors duration-300">Real-time Progress Tracking</h3>
          <p class="mt-2 text-gray-300 group-hover:text-gray-200 transition-colors duration-300">
            Monitor contributions, track progress, and get instant notifications when goals are reached.
          </p>
        </div>
      </div>
    </div>

    <!-- Mobile App Preview -->
    <div class="mt-24 relative animate-fade-in-up" style="animation-delay: 0.3s;">
      <div class="absolute inset-0 bg-gradient-to-r from-purple-500/10 via-transparent to-blue-500/10 rounded-3xl"></div>
      <div class="relative bg-gray-800/50 backdrop-blur-sm rounded-3xl p-8 md:p-12 border border-gray-700/50 shadow-2xl">
        <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 items-center">
          <div>
            <h3 class="text-2xl font-display font-bold text-white lg:text-3xl">
              Manage Your Pools <span class="bg-gradient-to-r from-purple-400 to-blue-400 bg-clip-text text-transparent">On The Go</span>
            </h3>
            <ul class="mt-6 space-y-4">
              <li class="flex items-start group">
                <div class="flex-shrink-0">
                  <div class="flex items-center justify-center h-6 w-6 rounded-full bg-gradient-to-br from-purple-600 to-blue-600 group-hover:shadow-purple-500/25 transition-all duration-300">
                    <svg class="h-4 w-4 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                    </svg>
                  </div>
                </div>
                <p class="ml-3 text-gray-300 group-hover:text-gray-200 transition-colors duration-300">Instant M-Pesa notifications for all transactions</p>
              </li>
              <li class="flex items-start group">
                <div class="flex-shrink-0">
                  <div class="flex items-center justify-center h-6 w-6 rounded-full bg-gradient-to-br from-blue-600 to-purple-600 group-hover:shadow-blue-500/25 transition-all duration-300">
                    <svg class="h-4 w-4 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                    </svg>
                  </div>
                </div>
                <p class="ml-3 text-gray-300 group-hover:text-gray-200 transition-colors duration-300">Easy contribution tracking and reminders</p>
              </li>
              <li class="flex items-start group">
                <div class="flex-shrink-0">
                  <div class="flex items-center justify-center h-6 w-6 rounded-full bg-gradient-to-br from-purple-600 to-blue-600 group-hover:shadow-purple-500/25 transition-all duration-300">
                    <svg class="h-4 w-4 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                    </svg>
                  </div>
                </div>
                <p class="ml-3 text-gray-300 group-hover:text-gray-200 transition-colors duration-300">Secure fund management with transparency</p>
              </li>
            </ul>
          </div>
          <div class="relative">
            <!-- Mobile Frame -->
            <div class="relative mx-auto w-64 h-[500px] bg-gray-900 rounded-[3rem] p-3 shadow-2xl border border-gray-700/50">
              <div class="absolute inset-0 bg-gradient-to-b from-purple-600/20 to-blue-600/20 rounded-[2.5rem]"></div>
              <div class="relative h-full bg-gray-800 rounded-[2.5rem] overflow-hidden">
                <!-- App Preview Content -->
                <div class="h-full bg-gradient-to-b from-gray-800 to-gray-900 p-2">
                  <img src="/sample.png" alt="App Preview" class="w-full h-auto rounded-xl shadow-lg" />
                </div>
              </div>
              <!-- Floating elements around phone -->
              <div class="absolute -top-4 -right-4 w-8 h-8 bg-purple-500/30 rounded-full blur-lg animate-pulse"></div>
              <div class="absolute -bottom-4 -left-4 w-8 h-8 bg-blue-500/30 rounded-full blur-lg animate-pulse delay-1000"></div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section> 